            "args": [
                "-Command",
                "if (!(Test-Path 'build\\release')) { New-Item -ItemType Directory -Path 'build\\release' -Force | Out-Null }; Compile-Cpp-Modern '${file}' 'build\\release\\${fileBasenameNoExtension}'"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "üèÉ Run Debug",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "& { Set-Location -Path '${workspaceFolder}'; .\\build\\debug\\${fileBasenameNoExtension}.exe }"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "üèÉ Run Release",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "& { Set-Location -Path '${workspaceFolder}'; .\\build\\release\\${fileBasenameNoExtension}.exe }"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "üêõ‚ñ∂Ô∏è Debug & Run",
            "dependsOrder": "sequence",
            "dependsOn": [
                "üêõ Debug Build",
                "üèÉ Run Debug"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "‚ö°‚ñ∂Ô∏è Release & Run",
