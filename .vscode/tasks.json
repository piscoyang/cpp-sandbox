{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üêõ Debug Build",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (!(Test-Path 'build\\debug')) { New-Item -ItemType Directory -Path 'build\\debug' -Force | Out-Null }; Compile-Cpp-Debug '${file}' 'build\\debug\\${fileBasenameNoExtension}'"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "‚ö° Release Build",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (!(Test-Path 'build\\release')) { New-Item -ItemType Directory -Path 'build\\release' -Force | Out-Null }; Compile-Cpp-Release '${file}' 'build\\release\\${fileBasenameNoExtension}'"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "üöÄ Modern C++20 Build",
            "type": "shell",
