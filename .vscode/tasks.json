        },
        {
            "label": "üßπ Clean Debug",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (Test-Path 'build\\debug') { Remove-Item -Path 'build\\debug\\*' -Recurse -Force; Write-Host 'üßπ Debug files cleaned!' -ForegroundColor Green } else { Write-Host 'üìÅ Debug folder not found - nothing to clean.' -ForegroundColor Yellow }"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
